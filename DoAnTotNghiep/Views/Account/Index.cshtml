@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<style>
    body.waiting * {
        cursor: wait;
    }
</style>
<body class="br-body">
    <div class="sufee-login d-flex align-content-center flex-wrap">
        <div class="container">
            <div class="login-content">
                <div class="login-form">
                    <form>
                        <div class="form-group">
                            <label for="username">Tên đăng nhập<span class="cl-txt-notic-1 ">*</span></label>
                            <input id="username" value="admin" title="admin" name="username" type="email" class="form-control" placeholder="Email">
                        </div>
                        <div class="form-group m-t--15">
                            <label for="password">Mật khẩu<span class="cl-txt-notic-1 ">*</span></label>
                            <input id="password" value="123123" title="******" name="password" type="password" class="form-control" placeholder="Password">
                        </div>
                        <div class="checkbox ">
                            <label class="flex-l">
                                <input type="checkbox">
                                <partial> <span class="fs-12 m-l-8">Nhớ tài Khoản</span></partial>
                            </label>
                        </div>
                        <a id="login" class="gradi-btn gradi-btn-clr">Đăng nhập</a>
                        <div class="hr-text">
                            Hoặc
                        </div>
                        <div style="margin: auto; cursor: pointer;" class="google-btn">
                            <a onclick="LoginToDashboard()">
                                <div class="google-icon-wrapper">
                                    <img class="google-icon" src="https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo.svg" />
                                </div>
                                <p class="btn-text"><b>Sign in with google</b></p>
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $("#login").click(function () {
                document.body.className = 'waiting';
                var username = $("#username").val();
                var password = $("#password").val();
                $.ajax({
                    url: "/Account/Index",
                    data: { username, password },
                    method: "POST",
                    success: function (result) {
                        //$("#div1").html(result);
                        window.location=result;
                    },
                    complete: function(){
                        document.body.className = ''; // could be empty or whatever you want
                    }
                });
            });
            $(document).on('keypress', function (event) {
                if (event.which == 13) {
                    document.body.className = 'waiting';
                    var username = $("#username").val();
                    var password = $("#password").val();
                    $.ajax({
                        url: "/Account/Index",
                        data: { username, password },
                        method: "POST",
                        success: function (result) {
                            //$("#div1").html(result);
                            window.location = result;
                        },
                        complete: function () {
                            document.body.className = ''; // could be empty or whatever you want
                        }
                    });
                }
            });
        });
    </script>
</body>
