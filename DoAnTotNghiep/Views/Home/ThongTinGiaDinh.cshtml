<!--Container Main start-->
<div class="border-page">
        <div class="infor-family">
            <p class="title-page">Thông tin gia đình</p>
            <div class="title-line"></div>
            <div class="table-inout">
            <table style="width:100%" class="m-t-10 ">
                    <tr>
                        <th colspan="3">THÔNG TIN NỘI NGOẠI TRÚ</th>
                        <th colspan="1">THÔNG TIN KHÁC</th>
                    </tr>
                    <tr>
                        <td style="width:10%">Thông tin cha</td>
                        <td style="width:20% ">
                            <p><i class='bx bxs-chevrons-right m-r-10' style='color:green'></i>Họ Tên cha: </p>
                            <p><i class='bx bxs-chevrons-right m-r-10' style='color:green'></i>Tuổi: </p>
                            <p><i class='bx bxs-chevrons-right m-r-10' style='color:green'></i>Điện thoại: </p>
                            <p><i class='bx bxs-chevrons-right m-r-10' style='color:green'></i>Nơi làm việc: </p>
                        </td>
                        <td style="width:35%">
                            <input id="inputchung" type="text" class="input-infor flex-m p-l-10 fs-12 m-b-8" placeholder="@Model.FatherName">
                            <input id="inputchung" type="text" class="input-infor flex-m p-l-10 fs-12 " placeholder="@Model.FatherAge">
                            <input id="inputchung" type="text" class="input-infor flex-m p-l-10 fs-12 m-b-8" placeholder="@Model.FatherPhone1">
                            <input id="inputchung" type="text" class="input-infor flex-m p-l-10 fs-12 " placeholder="@Model.FatherJob">
                        </td>
                        <td rowspan="3"  style="width:45%">
                            <p class="d-flex"><i class='bx bxs-chevrons-right m-r-10' style='color:green'></i>Điện thoại gia đình: &emsp; <input id="#inputfamily" type="text" class="input-infor flex-m p-l-10 fs-12 m-b-8" placeholder="@Model.HomePhoneContact"> </p>
                            <p class="d-flex"><i class='bx bxs-chevrons-right m-r-10' style='color:green'></i>Điện thoại liên hệ: &ensp; &ensp; <input id="#inputfamily" type="text" class="input-infor flex-m p-l-10 fs-12 m-b-8 m-l-4" placeholder="@Model.HomePhone"></p>
                            <p class="d-flex"><i class='bx bxs-chevrons-right m-r-10 ' style='color:green'></i>Người / địa chỉ liên hệ:  <textarea id="textareaFamily" name="textareaFamily" cols="35">@Model.IsAddressPhone</textarea></p>
                            <p class="d-flex m-t-8"><i class='bx bxs-chevrons-right m-r-10 m-t-4' style='color:green'></i>Email liên hệ: &emsp; <input id="#inputfamily" type="text" class="input-infor flex-m p-l-10 fs-12 m-b-8 m-l-34" placeholder="@Model.ContactEmail"></p>
                            <p class="d-flex">
                                <i class='bx bxs-chevrons-right m-r-10' style='color:green'></i>Tên anh chị em: <textarea id="textareaFamily" name="textareaFamily" rows="4" cols="35" class="m-l-35">@Model.Siblings</textarea>
                            </p>
                        </td>
