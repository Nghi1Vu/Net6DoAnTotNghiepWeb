<!--Container Main start-->
<div class="border-page">
    <div class="Bang-tin">
        <p class="title-page">Thời Khóa biểu</p>
        <div class="title-line"></div>
        <div class="panelTKB">
            <div class="container px-1 px-sm-5 mx-auto">
                <form autocomplete="off">
                    <div class="flex-row d-flex justify-content-center">
                        <div class="col-lg-5 col-11">
                            <div class="input-group input-daterange">
                                <input type="text" value="@ViewBag.aDate" id="aDate" class="form-control input1" placeholder="Từ ngày" readonly>
                                <input type="text" value="@ViewBag.eDate" id="eDate" class="form-control input2" placeholder="Đến ngày" readonly>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="row">
                    <div class="col-lg-5">
                    </div>
                    <div class="col-lg-2 m-l-19 m-t-45 txt-panel-r">
                        <button class="button" onclick="getTKB();">Lọc dữ liệu</button>
                    </div>
                    <div class="col-lg-5">
                    </div>
                </div>
            </div>
        </div>
        <div class="table-tkb">
            <table id="getTKB" style="width:100%; margin-top: 5px;">
                <tr class="clo-1">
                    <!-- Hàng 1-->
                    <th style="width:8%">STT</th>
                    <th style="width:10%">Thứ</th>
                    <th style="width:10%">ngày</th>
                    <th style="min-width:10%; max-width:20%; overflow: visible;">Sáng</th>
                    <th style="min-width:10%; max-width:20%; overflow: visible;">Chiều</th>
                    <th style="min-width:10%; max-width:20%; overflow: visible;">Tối</th>
                    <th style="width:8%">Ghi chú</th>
                </tr>
            </table>
        </div>
    </div>
</div>
<script>
    $(function(){
        var aDate = $("#aDate").val();
        var eDate = $("#eDate").val();
        $.ajax({
            url: "/Home/GetTKB",
            data: { aDate, eDate },
            success: function (res) {
                $("#getTKB").html(res);
            }
        })
    })
    function getTKB() {
        var aDate = $("#aDate").val();
        var eDate = $("#eDate").val();
         $.ajax({
            url: "/Home/GetTKB",
            data: { aDate, eDate },
            success: function (res) {
                $("#getTKB").html(res);
            }
        })
    }
</script>