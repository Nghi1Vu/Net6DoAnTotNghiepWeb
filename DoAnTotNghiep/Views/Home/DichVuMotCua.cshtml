                </p>
            </div>
            <div class="table-TBChungTL">
                <table style="width:100% ;padding-left: 4px">
                    <form>
                    <tr>
                        <th style="width:3%;">STT</th>
                        <th>Khoản thu</th>
                        <th style="width:10%;">Đơn giá <sub>(vnđ)</sub></th>
                        <th style="width:8%;">Số lượng</th>
                        <th style="width:12%;">Thành tiền <sub>(vnđ)</sub></th>
                        <th style="width:12%;">Ngày áp dụng</th>
                        <th style="width:15%;">Số ngày sử lý yêu cầu</th>
                        <th style="width:10%;">Trạng thái</th>
                        <th style="width:0%;"><input id="chkall" type="checkbox"></th>
                    </tr>
                    <tbody>
                            @foreach(var item in Model)
                            {
                            <tr>
                                <td>@(stt++)</td>
                                <td>@item.ChannelAmountName</td>
                                <td>@item.Costs</td>
                                <td>
                                    <div style="padding: 0 15px; transform: scale(0.8);">
                                        <select class="form-select count" aria-label="Default select example">
                                            <option selected>1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                            <option value="4">4</option>
                                            <option value="5">5</option>
                                        </select>
                                    </div>
                                </td>
                                <td></td>
                                <td>@item.ModifiedTime.ToString("dd/MM/yyyy")</td>
                                <td>@item.Day</td>
                                <td></td>
                                <td><div class="p-l-2"><input value="@item.ChannelAmountID" type="checkbox" aria-label="Checkbox for following text input"></div></td>
                            </tr>
                            }
                            
                        <tr class="txt-clr-red">
                            <td colspan="3">Số dư tài khoản:</td>
                            <td colspan="6">@ViewBag.StudentInfo.Amount.ToString("#,###", cul.NumberFormat)<sub> (vnđ)</sub></td>
                        </tr>
                    </tbody>
                    </form>
                </table>
                <button id="thanhtoan" type="submit" class="button m-t-12 m-l-16">Thanh toán</button>
            </div>
            <div class="table-TBChungTL m-t-10">
                <table style="width:100% ;padding-left: 4px">
                    <tr>
                        <td colspan="16">
                            <strong class="fs-11">
                                Danh sách các dịch vụ hành chính đã đăng ký
                            </strong>
                        </td>
                    </tr>
                    <tr>
                        <th style="width:2%;">STT</th>
                        <th>Tên dịch vụ</th>
                        <th style="width:10%;">Đơn giá <sub>(vnđ)</sub></th>
                        <th style="width:8%;">Số lượng</th>
                        <th style="width:10%;">Tổng tiền <sub>(vnđ)</sub></th>
                        <th style="width:10%;">Ngày đăng ký</th>
                        <th style="width:8%;">Thông báo</th>
                        <th style="width:14%;">Trạng thái</th>
                        <th style="width:12%;">Số ngày sử lý yêu cầu</th>
                        <th style="width:0%;"><input type="checkbox"></th>
                    </tr>
                    <tbody>
                        @if (ViewBag.StudentAmount != null)
                        {
                            var stt2 = 1;
                            @foreach (var item in (List<StudentAmount>)ViewBag.StudentAmount)
                            {
                                <tr>
                                    <td>@(stt2++)</td>
                                    <td>@item.ChannelAmountName</td>
                                    <td>@item.Amount</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.TotalAmount</td>
                                    <td>@item.CreatedTime.ToString("dd/MM/yyyy")</td>
                                    <td></td>
                                    @if (item.StatusID == 3)
                                    {
                                        <td style="color:green"><strong>Hoàn thành- Đã nhận hồ sơ</strong></td>
                                    }else if (item.StatusID == 1)
                                    {
                                        <td style="color:yellowgreen"><strong>Đang xử lý- Đã nhận hồ sơ</strong></td>
                                    }
                                    else
                                    {
                                        <td style="color:red"><strong>Yêu cầu đã bị hủy</strong></td>
                                    }
                                    <td>@item.Day</td>
                                    <td></td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
