<!--Container Main start-->
<div class="border-page">
    <div class="Bang-tin">
        <p class="title-page">ĐÁNH GIÁ KẾT QUẢ RÈN LUYỆN THEO HỌC KỲ</p>
        <div class="title-line"></div>
        <div class="table-Danhgia">
            <table style="width:100%; margin-top: 10px;">
                <tr class="clo-1">
                    <!-- Hàng 1-->
                    <th style="width:5%">STT</th>
                    <th style="width:15%">Học kỳ</th>
                    <th style="width:15%">Chọn kỳ xét rèn luyện</th>
                    <th style="width:15%">Tự đánh giá</th>
                    <th style="width:15%">GV đánh giá</th>
                    <th style="width:15%">Xếp loại</th>
                    <th style="width:15%">Trạng thái</th>
                </tr>
                @for(int i=0; i<12;i++)
                {
                    if (i<@Model.Count)
                            {
                        <tr>
                            <!-- Hàng 2-->
                            <td>@(stt++)</td>
                            <td>Học kỳ @Model[i].SemesterID</td>
                            <td><a href="@Url.Action("BieuMauDanhGiaRenLuyen", "Home" , new {Id =Model[i].SemesterID})" class="news-Link">[Xét rèn luyện]</td>
                            <td>@Model[i].Score</td>
                            <td></td>
                            <td>Chưa đủ dữ liệu đánh giá</td>
                            <td>Đang xét đánh giá</td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <!-- Hàng 2-->
                            <td>@(stt++)</td>
                            <td>Học kỳ @(i + 1)</td>
                            <td><a href="@Url.Action("BieuMauDanhGiaRenLuyen", "Home" , new {Id =(i+1)})" class="news-Link">[Xét rèn luyện]</td>
                            <td></td>
                            <td></td>
                            <td>Chưa đủ dữ liệu đánh giá</td>
                            <td>Đang xét đánh giá</td>
                        </tr>
                    }
                }
               
            </table>
        </div>
    </div>
</div>