<!--Container Main start-->
<div class="border-page">
    <div class="Bang-tin">
        <p class="title-page">Xem lịch giảng dạy</p>
        <div class="title-line"></div>
        <div class="TBChungTL">
            <div class="infor-student">
                <div class="Gap-txt">
                    <div class="d-flex">
                        <div class="">
                            <p>Họ và tên sinh viên:</p>
                            <p>Mã sinh viên:</p>
                            <p>Lớp:</p>
                        </div>
                        <div class="p-l-30">
                            <p><strong>@ViewBag.StudentInfo.Fullname</strong></p>
                            <p><strong>@ViewBag.StudentInfo.Usercode</strong></p>
                            <p><strong>@ViewBag.StudentInfo.Classname</strong></p>
                        </div>
                    </div>
                    <div class="d-flex">
                        <div class="">
                            <p><strong>Tổng tín chỉ tích lũy: </strong></p>
                            <p><strong>Điểm trung bình chung tích lũy:	</strong></p>
                            <p><strong>Xếp hạng:</strong></p>
                        </div>
                        <div class="txt-clr-red p-l-5">
                            <p><strong>120.0</strong></p>
                            <p><strong>3.32</strong></p>
                            <p><strong>Giỏi</strong></p>
                        </div>
                    </div>
                    <div class="d-flex">
                        <div class="">
                            <p>Số tiền trong tài khoản:</p>
                            <p>Số tín chỉ đã đăng ký:</p>
                        </div>
                        <div class="txt-clr-red p-l-5">
                            <p><strong>37,000</strong></p>
                            <p><strong></strong></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="table-TBChungTL">
                <table style="width:100% ;padding-left: 4px">
                    <tr>
                        <td colspan="8">
                            <strong class="fs-11">Danh sách những học phần sinh viên đã đăng ký</strong>
                        </td>
                    </tr>
                    <tr>
                        <th style="width:2%;" rowspan="2">STT</th>
                        <th style="width:10%;" rowspan="2">Mã Học Phần</th>
                        <th rowspan="2">Tên môn</th>
                        <th style="width:10%;" rowspan="2">Số tin chỉ</th>
                        <th colspan="2">Thời gian học</th>
                        <th style="width:13%;" rowspan="4">Xem lich giảng dạy</th>
                        <th style="width:25%;" rowspan="2">Giáo viên giảng dạy</th>
                    </tr>
                    <tr>
                        <th style="width:6%;">Từ ngày</th>
                        <th style="width:6%;">Đến ngày</th>
                    </tr>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td>@(stt++)</td>
                                <td>@item.MHP</td>
                                <td>@item.ModulesName</td>
                                <td>@item.Credits</td>
                                <td>@item.minDay</td>
                                <td>@item.maxDay</td>
                                <td><a href="@Url.Action("XemLichGiangDay", "Home", new {IndependentClassID=item.IndependentClassID})">[Xem lịch giảng dạy]</a></td>
                                <td>@(item.teachername + "(" + item.teacherphone + ")")</td>

                            </tr>
                        }
                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

